<Window x:Class="WPF_browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_browser"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500">
    <Grid>
        <WebBrowser HorizontalAlignment="Left" Height="300" Margin="10,50,10,10" 
                    VerticalAlignment="Top"  Width="450" x:Name="myWebBrowser"/>
        
        <Button Content="Back" HorizontalAlignment="Left"  Margin="10,0,0,0 "
                VerticalAlignment="Top" Width="100" Height="50" x:Name="btn1" Click="btn1_Click" />

        <Button x:Name="btn2" Content="Forward" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Height="50" Width="100" Margin="100,0,100,100" Click="btn2_Click"/>

        <Button x:Name="btnsearch" Content="Search" HorizontalAlignment="Right"  VerticalAlignment="Top"
                Height="50" Width="100" Click="btnsearch_Click"/>

        <TextBox x:Name="txtsearch" HorizontalAlignment="Center" VerticalAlignment="Top" Height="25" Width="175"
                  Margin="100,10,0,0"/>


    </Grid>
</Window>
